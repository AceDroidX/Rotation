<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context="com.github.wangxuxin.rotation.MainActivity">

    <TextView
            android:text="@string/app_name"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="150dp" android:id="@+id/textView"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_width="wrap_content"/>
    <Switch
            android:text="开关"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="42dp"
            tools:layout_editor_absoluteX="158dp" android:id="@+id/main_switch"/>
</android.support.constraint.ConstraintLayout>
